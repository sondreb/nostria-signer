{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nostria Signer",
  "version": "../package.json",
  "identifier": "app.nostria.signer",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:4646",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/app/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Nostria Signer",
        "width": 900,
        "height": 1080
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "mobile": {
      "androidBackgroundActivity": true
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "appimage",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "brainbox.no",
    "copyright": "Â© 2025 brainbox.no"
  }
}
